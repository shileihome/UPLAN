<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_root"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_common_dialog_background"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:text="提示"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_16"/>

    <View
        android:id="@+id/view_divide"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/divide_line"
        android:background="@color/color_dddddd"/>

    <TextView
        android:id="@+id/tv_sub_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_25"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_25"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:text="是否清理缓存？"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_15"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginBottom="@dimen/dimen_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left"
            style="@style/dialog_click_grey_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/common_dialog_cancel"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_16"/>


        <TextView
            android:id="@+id/tv_right"
            style="@style/btn_click_bule_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dimen_20"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/commit_change"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>
</LinearLayout>