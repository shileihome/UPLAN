<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_root"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_76"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dimen_32"
            android:background="@drawable/shape_update_dialog_header"
            />

        <ImageView
            android:id="@+id/iv_rocket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_update_version_rocket"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_header"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_18"
            android:paddingRight="@dimen/dimen_18"
            android:paddingTop="@dimen/dimen_25"
            android:background="@drawable/shape_update_dialog_background"
            >

            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_version_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_11"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_18"
                android:text="发现新版本, 请立即更新"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_version_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_15"
                android:lineSpacingExtra="@dimen/dimen_10"
                tools:text="1、新版本新版本新版本新版本；\n2、新版本新版本新版本新版本；\n3、新版本新版本新版本新版本；"
            />

            <ImageView
                android:id="@+id/iv_start_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_8"
                android:layout_marginBottom="@dimen/dimen_5"
                android:src="@drawable/icon_btn_update"/>

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_close_open_account"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_22"
        />
</LinearLayout>