                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="86dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/discover_vip_1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        />
