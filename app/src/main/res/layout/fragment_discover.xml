                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_classroom_title"
                        android:layout_toRightOf="@id/tv_classroom_card"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:textColor="#FF3A3A3A"
                        android:text="2018即将落幕，2019风云诡谲。新的一年各类资产配置该当如何，我们唯有"/>
                    <TextView
                        android:id="@+id/tv_classroom_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_classroom_text"
                        android:layout_marginTop="6dp"
                        android:textColor="#FF979797"
                        android:textSize="8sp"
                        android:text="2019-01-09 01:12:27"
                        android:layout_gravity="end"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>

                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
