                       android:layout_alignParentStart="true"
                       android:layout_alignParentTop="true"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginLeft="56dp"
                       android:layout_marginStart="56dp"
                       android:layout_marginTop="151dp"
                       android:text="安全"
                       android:textColor="#FF565656"
                       android:textSize="14sp"
                       android:textStyle="bold" />-->
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:weightSum="8"
                android:orientation="vertical">

                <!-- <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="0dp"
                     android:layout_weight="1"
                     android:layout_marginLeft="20dp"
                     android:layout_marginTop="10dp"
                     android:orientation="horizontal">

                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_vertical"
                         android:src="@drawable/label_icon" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="10dp"
                         android:text="四大优势"
                         android:layout_gravity="center_vertical"
                         android:textColor="#FF000000"
                         android:textSize="18sp"
                         android:textStyle="bold" />
                 </LinearLayout>-->
                <android.support.v7.widget.CardView
                    android:id="@+id/ll_vip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="2dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="2dp"
                    app:cardPreventCornerOverlap="true"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:id="@+id/cv_safe"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="13dp"
                            android:layout_weight="1"
                            >

                            <ImageView
                                android:id="@+id/iv_safe"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/safe" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_below="@id/iv_safe"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"
                                android:text="安全"
                                android:textColor="#FF565656"
                                android:textSize="14sp"
                                />
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/cv_lucency"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_lucency"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/lucency" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/iv_lucency"
                                android:layout_marginTop="10dp"
                                android:text="透明"
                                android:textColor="#FF565656"
                                android:textSize="14sp"
                                />


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/cv_valid"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_valid"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/valid" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/iv_valid"
                                android:text="有效"
                                android:textColor="#FF565656"
                                android:textSize="14sp"
                                />


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/cv_simple"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="13dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_simple"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/simple" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/iv_simple"
                                android:layout_marginTop="10dp"
                                android:text="简单"
                                android:textColor="#FF565656"
                                android:textSize="14sp"
                                />

                        </RelativeLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:layout_marginLeft="20dp"
                      android:layout_marginTop="10dp"
                      android:orientation="horizontal">

                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:src="@drawable/label_icon" />

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="10dp"
                          android:text="关于我们"
                          android:textColor="#FF000000"
                          android:layout_gravity="center_vertical"
                          android:textSize="18sp"
                          android:textStyle="bold" />
                  </LinearLayout>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.15"
                android:orientation="vertical"
                android:background="@color/white">


                <ImageView
                    android:id="@+id/tv_team_info"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/about_us"
                    android:scaleType="fitXY"
                    android:gravity="center" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/bottom_explain"
                    android:gravity="center"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>